{
  "description" : "Horizontal Bar Chart",
  "width" : 400,
  "height" : 400,
  "padding" : 20,
  "signals" : [ {
    "name" : "tooltip",
    "on" : [ {
      "events" : "rect:mouseover",
      "update" : "datum"
    }, {
      "events" : "rect:mouseout",
      "update" : "{}"
    } ],
    "value" : ""
  } ],
  "scales" : [ {
    "name" : "yscale",
    "domain" : {
      "data" : "rawData",
      "field" : "barLabel"
    },
    "range" : "height",
    "round" : true,
    "type" : "band",
    "padding" : 0.1
  }, {
    "name" : "xscale",
    "domain" : {
      "data" : "rawData",
      "field" : "barHeight"
    },
    "range" : "width",
    "round" : true,
    "type" : "linear",
    "nice" : true,
    "zero" : true
  } ],
  "axes" : [ {
    "scale" : "xscale",
    "orient" : "bottom"
  }, {
    "scale" : "yscale",
    "orient" : "left"
  } ],
  "marks" : [ {
    "type" : "rect",
    "from" : {
      "data" : "rawData"
    },
    "encode" : {
      "enter" : {
        "_type" : "rect",
        "x" : [ {
          "value" : 0,
          "scale" : "xscale"
        } ],
        "x2" : [ {
          "field" : "barHeight",
          "scale" : "xscale"
        } ],
        "y" : [ {
          "field" : "barLabel",
          "scale" : "yscale"
        } ],
        "height" : [ {
          "scale" : "yscale",
          "band" : 1
        } ]
      },
      "update" : {
        "_type" : "rect",
        "fill" : [ {
          "value" : "steelblue"
        } ]
      },
      "hover" : {
        "_type" : "rect",
        "fill" : [ {
          "value" : "orange"
        } ]
      }
    }
  }, {
    "type" : "text",
    "encode" : {
      "enter" : {
        "_type" : "text",
        "fill" : [ {
          "value" : "#333"
        } ],
        "align" : [ {
          "value" : "left"
        } ],
        "baseline" : [ {
          "value" : "middle"
        } ]
      },
      "update" : {
        "_type" : "text",
        "x" : [ {
          "signal" : "tooltip.barHeight",
          "scale" : "xscale",
          "offset" : 3
        } ],
        "y" : [ {
          "signal" : "tooltip.barLabel",
          "scale" : "yscale",
          "band" : 0.5
        } ],
        "fillOpacity" : [ {
          "test" : "datum === tooltip",
          "value" : 0
        }, {
          "value" : 1
        } ],
        "text" : [ {
          "signal" : "tooltip.barHeight"
        } ]
      }
    }
  } ]
}